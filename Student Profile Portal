    <script>
        document.getElementById('profileForm').addEventListener('submit', function(event) {
            event.preventDefault(); 
            
            const roll = document.getElementById('rollNumber').value;
            const name = document.getElementById('studentName').value;
            const department = document.getElementById('department').value;
            const email = document.getElementById('email').value;
            
            const skillsCheckboxes = document.querySelectorAll('input[name="skills"]:checked');
            const skills = Array.from(skillsCheckboxes).map(cb => cb.value).join(', ');
            
            const tableBody = document.getElementById('profileTableBody');
            
            const newRow = tableBody.insertRow();
            newRow.className = "hover:bg-gray-100 transition-colors duration-150"; 
            
            newRow.insertCell(0).textContent = roll;
            newRow.insertCell(1).textContent = name;
            newRow.insertCell(2).textContent = department;
            newRow.insertCell(3).textContent = email;
            newRow.insertCell(4).textContent = skills || 'N/A';
                        
            for (let i = 0; i < 5; i++) {
                newRow.cells[i].className = "px-6 py-4 whitespace-nowrap text-sm text-gray-700";
                if (i === 0) {
                    newRow.cells[i].className += " font-medium text-gray-900"; 
                }
            }
            
            event.target.reset();
        });
    </script>

